enum itemType
{
    focus_knownX,
    nonfocus_knownX,
    focus_newX,
    nonfocus_newX,
}

// Item table record.
record TestItem
{
    int id; // item id
    itemType type;
    string sndfn1_1;
    string sndfn2_1;
    string sndfn3_1;

    string sndfn1_2;
    string sndfn2_2;
    string sndfn3_2;
}


// Loads item table(s) from CSV file(s) in the stimuli folder.
int load_stimuli(TestItem[] target, string filename)
{
    int err;

	// Load data into test_prac_items table.
    err =  target.load(stimuli_dir() + filename,
        true,           // if true, file contains a header row
        1);             // number of lines to skip before header and data
    if (err) return err;

    return OK;
}

TestItem[..] test_items;
